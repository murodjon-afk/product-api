generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int    @id @default(autoincrement())
  title    String
  image    String
  price    String
  overview String
}

model User {
  id         String @id @default(uuid())
  email      String @unique
  name       String
  profileImg String
  role       String @default("user")
}
